<div class="card center-card" style="width: 18rem;">
  <%= image_tag(@image.pic, class:"card-img-top") %>
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text"><%= @image.caption %></p>
  </div>
  <% if @image.comments.any? %>
  <ul class="list-group list-group-flush">

    <% @image.comments.each do |comment| %>
        <li class="list-group-item">
          <%=
          #link_to
          comment.email#, user_path(@user_id)
          %><br />


            <%= comment.text_body %>

        </li>

        <% end %>

  </ul>
  <% end %>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
<!------------------------------>

<p><%= link_to "Add a comment", new_image_comment_path(@image) %></p>

<p><%= link_to "Edit", edit_image_path(@image) %></p>
<p><%= link_to "Delete image", image_path(@image),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to images", images_path %></p>
