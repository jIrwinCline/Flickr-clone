
<h2>Image: <%= @image %></h2>
<h3><%= @comment.text_body %></h3>

<p><%= link_to "Edit comment", edit_image_comment_path(@image, @comment) %></p>
<p><%= link_to "Delete comment", image_comment_path(@image, @comment),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Return to image", image_path(@image) %></p>
